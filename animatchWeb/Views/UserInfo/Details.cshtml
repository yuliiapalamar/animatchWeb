@model animatchWeb.Models.UserInfo

@{
    ViewData["Title"] = "Details";
}

<h1>Профіль</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Model.Username
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Level
        </dt>
        <dd class="col-sm-10">
            @Model.Level
        </dd>
        <dt class="col-sm-2">
            Text
        </dt>
        <dd class="col-sm-10">
            @Model.Text
        </dd>
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Photo" alt="User Photo" />
            
        </dd>
        <dt class="col-sm-2">
            WatchedCount
        </dt>
        <dd class="col-sm-10">
            @Model.WatchedCount
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
</div>
